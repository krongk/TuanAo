<h1>Listing orders</h1>

<table>
  <tr>
    <th>User</th>
    <th>Product</th>
    <th>Quantity</th>
    <th>Discount</th>
    <th>Order price</th>
    <th>Is pay</th>
    <th>Pay type</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%=h order.user %></td>
    <td><%=h order.product %></td>
    <td><%=h order.quantity %></td>
    <td><%=h order.discount %></td>
    <td><%=h order.order_price %></td>
    <td><%=h order.is_pay %></td>
    <td><%=h order.pay_type %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New order', new_order_path %>