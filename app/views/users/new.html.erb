<div id="about">
<%= error_messages_for :user %>
<% form_for :user, :url => users_path,:html=>{:class=>'yform'} do |f| -%>
 <div class="head"><h2 style="color:#666;font-size: 1.4em;">我还没有注册呢!<span>快速注册团奥帐号</span></h2></div>
<p><label for="email">电子邮箱：</label>
<%= f.text_field :email %></p>

<p><label for="login">登录名：</label>
<%= f.text_field :login %></p>

<p><label for="password">密码：</label>
<%= f.password_field :password %></p>

<p><label for="password_confirmation">密码确认：</label>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag '注 册' %></p>
<% end -%>
</div>